{
  "easycom": {
    "^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
  },
  "pages": [
    {
      "path": "pages/toolbox/toolbox",
      "style": {
        "navigationBarTitleText": "工具箱"
      }
    },
    {
      "path": "pages/mine/mine",
      "style": {
        "navigationBarTitleText": "我的"
      }
    },
    {
      "path": "pages/rate-calculator/rate-calculator",
      "style": {
        "navigationBarTitleText": "商户费率计算器",
        "navigationBarBackgroundColor": "#3c9cff",
        "navigationBarTextStyle": "white",
        // 隐藏ios键盘完成按钮
        "app-plus": {
          "softinputNavBar": "none"
        }
      }
    }
  ],
  // 配置tabbar导航栏
  "tabBar": {
    "borderStyle": "black",
    "selectedColor": "#579AF8",
    "color": "#333333",
    "list": [
      {
        "pagePath": "pages/toolbox/toolbox",
        "iconPath": "static/tabbar/toolbox-0.png",
        "selectedIconPath": "static/tabbar/toolbox-1.png",
        "text": "工具箱"
      },
      {
        "pagePath": "pages/mine/mine",
        "iconPath": "static/tabbar/mine-0.png",
        "selectedIconPath": "static/tabbar/mine-1.png",
        "text": "我的"
      }
    ]
  },
  "globalStyle": {
    "navigationBarTextStyle": "white",
    "navigationBarTitleText": "前端Tools",
    "navigationBarBackgroundColor": "#3c9cff",
    "backgroundColor": "#ffffff"
  }
}
